<h1>User info</h1>

<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@user, local:true do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :introduction %>
<%= f.text_field :introduction %>

<%= f.label :profile_image %>
<%= f.attachment_field :profile_image %>

<%= f.submit "Update User" %>

<% end %>
